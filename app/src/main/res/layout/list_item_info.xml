<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/list_tem_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_list_selector"
        android:paddingBottom="10.0sp"
        android:paddingTop="10.0sp" >

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="45.0sp"
            android:layout_height="45.0sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0sp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_bank" />

        <TextView
            android:id="@+id/list_item_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0sp"
            android:layout_marginRight="5.0sp"
            android:layout_toRightOf="@id/img_icon"
            android:text="ATM"
            android:textStyle="bold"
            android:textColor="#3d3d3d"
            android:textSize="15.0sp" />

    </RelativeLayout>

</RelativeLayout>