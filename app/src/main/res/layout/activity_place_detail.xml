<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ansoft.naksha.PlaceDetailActivity" >

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_gradient_list_selector"
        android:orientation="vertical"
        android:paddingBottom="5sp"
        android:paddingTop="5sp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageViewPlaceIconShowDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:src="@drawable/icon_type_ahead_hotel" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Puime Restaurant and Bar"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ta_rating_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.46 km away" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@id/showOnMapBtn"
            android:layout_width="fill_parent"
            android:layout_height="31sp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/button_orange_selector"
            android:text="Point Me There"
            android:textColor="@color/black"
            android:textSize="18.0sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/separatar1"
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:layout_below="@+id/lin1"
        android:background="@color/grey" />

    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separatar1"
        android:background="@drawable/bg_gradient_list_selector3"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@id/checkinLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:clickable="true"
            android:gravity="left"
            android:orientation="vertical" >

            <ImageView
                android:id="@id/checkinIcon"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.0"
                android:src="@drawable/icon_button_poi_details_check_in" />

            <TextView
                android:id="@id/checkinText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="Check In"
                android:textColor="@color/grey"
                android:textSize="12.0sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:background="@color/grey" />

        <View
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:background="@color/white" />

        <LinearLayout
            android:id="@id/saveLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:clickable="true"
            android:gravity="left"
            android:orientation="vertical"
            android:padding="2.0dip" >

            <ImageView
                android:id="@id/saveIcon"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.0"
                android:src="@drawable/icon_button_poi_details_save" />

            <TextView
                android:id="@id/saveText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="Save"
                android:textColor="@color/grey"
                android:textSize="12.0sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/separatar2"
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:layout_below="@+id/lin2"
        android:background="@color/grey" />

    <LinearLayout
        android:id="@+id/lin3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separatar2"
        android:layout_weight="1.0"
        android:background="@drawable/bg_gradient_list_selector3"
        android:clickable="true"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingBottom="10sp"
        android:paddingTop="10sp" >

        <ImageView
            android:id="@id/showMapIcon"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.0"
            android:src="@drawable/home_screen_nav_button_map" />

        <TextView
            android:id="@id/Show Map"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="Show On Map"
            android:textColor="@color/grey"
            android:textSize="12.0sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/separatar3"
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:layout_below="@+id/lin3"
        android:background="@color/grey" />

</RelativeLayout>