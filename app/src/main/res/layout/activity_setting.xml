<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffeeeeee"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/displayHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="10.0dip"
        android:text="Preferences"
        android:textSize="18.0sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:background="@drawable/gray_rounded_corner_shape"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@drawable/bg_gradient_list_selector2"
            android:orientation="vertical"
            android:paddingBottom="30.0sp" >

            <TextView
                android:id="@+id/tv_radius"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0sp"
                android:layout_marginRight="10.0sp"
                android:layout_marginTop="10.0sp"
                android:singleLine="true"
                android:text="Radius"
                android:textColor="@android:color/black"
                android:textSize="16.0sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0sp"
                android:layout_marginRight="10.0sp"
                android:layout_marginTop="10.0sp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_min_radius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:text="3"
                    android:textColor="@android:color/black"
                    android:textSize="15.0sp" />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.0sp"
                    android:layout_toLeftOf="@+id/tv_max_radius"
                    android:layout_toRightOf="@id/tv_min_radius"
                    android:max="20"
                    android:progress="3" />

                <TextView
                    android:id="@+id/tv_max_radius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="20"
                    android:textColor="@android:color/black"
                    android:textSize="15.0sp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_metric"
            android:layout_width="fill_parent"
            android:layout_height="60.0sp"
            android:layout_marginTop="2.0sp"
            android:clickable="true"
            android:background="@drawable/bg_gradient_list_selector2"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_title_metric"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0sp"
                android:layout_marginRight="10.0sp"
                android:singleLine="true"
                android:text="Unit"
                android:textColor="@android:color/black"
                android:textSize="15.0sp" />

            <ImageView
                android:id="@+id/img_next1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0sp"
                android:src="@drawable/ic_chevron_right_black_36dp" />

            <TextView
                android:id="@+id/tv_metric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_title_metric"
                android:layout_alignBottom="@+id/tv_title_metric"
                android:layout_toLeftOf="@+id/img_next1"
                android:singleLine="true"
                android:text="Kilometers"
                android:textColor="@android:color/black"
                android:textSize="15.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_piority"
            android:layout_width="fill_parent"
            android:layout_height="60.0sp"
            android:layout_marginTop="2.0sp"
            android:clickable="true"
            android:background="@drawable/bg_gradient_list_selector2"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_title_piority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0sp"
                android:layout_marginRight="10.0sp"
                android:singleLine="true"
                android:text="Priority"
                android:textColor="@android:color/black"
                android:textSize="15.0sp" />

            <ImageView
                android:id="@+id/img_next2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0sp"
                android:src="@drawable/ic_chevron_right_black_36dp" />

            <TextView
                android:id="@+id/tv_piority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_title_piority"
                android:layout_alignBottom="@+id/tv_title_piority"
                android:layout_toLeftOf="@id/img_next2"
                android:singleLine="true"
                android:text="Rating"
                android:textColor="@android:color/black"
                android:textSize="15.0sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_Account"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="10.0dip"
        android:text="Account"
        android:textSize="18.0sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:background="@drawable/gray_rounded_corner_shape"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/layout_account"
            android:layout_width="fill_parent"
            android:layout_height="60.0sp"
            android:layout_marginTop="2.0sp"
            android:clickable="true"
            android:background="@drawable/bg_gradient_list_selector2"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_Signtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0sp"
                android:layout_marginRight="10.0sp"
                android:layout_toLeftOf="@+id/img_signNext"
                android:singleLine="true"
                android:text="Sign In / Register"
                android:textColor="@android:color/black"
                android:textSize="15.0sp" />

            <ImageView
                android:id="@+id/img_signNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_chevron_right_black_36dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>